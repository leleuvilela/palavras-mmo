FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package.json ./
COPY server/package.json ./server/
COPY shared/package.json ./shared/

# Install dependencies
RUN npm install
RUN npm install --workspace=server
RUN npm install --workspace=shared

# Copy source code
COPY server ./server
COPY shared ./shared

# Build shared package
WORKDIR /app/shared
RUN npm run build

# Build server
WORKDIR /app/server
RUN npm run build

EXPOSE 3001

CMD ["npm", "start"]